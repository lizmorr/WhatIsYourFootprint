= render 'shared/errors' if @errors

.row
  .small-12.columns
    %h2 Edit Carbon Source

= form_for [:admin, @carbon_source] do |f|
  .row
    .small-12.columns
      = f.label :name
      = f.text_field :name

  .row
    .small-6.columns
      = f.label :conversion_factor
      = f.text_field :conversion_factor

    .small-6.columns
      = f.label :units
      = f.text_field :units

  .row
    .small-12.columns
      = f.submit "Edit source", class: "button secondary"
